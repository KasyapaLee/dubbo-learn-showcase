<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供者应用名称，该名称将在监控平台使用-->
    <dubbo:application name="02-dubbo-provider-zk"/>

    <!--注册Service，其就是真正的服务提供者-->
    <bean id="helloService" class="com.dobby.service.HelloServiceImpl"/>

    <!-- 连接 zk 注册中心 (单机) -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <!-- 连接 zk 注册中心 (集群) -->
<!--    <dubbo:registry address="zookeeper://127.0.0.1:2181?backup=127.0.0.2:2181,127.0.0.3:2181"/>-->

    <!-- 声明需要暴露的服务接口，将服务注册到 zk -->
    <dubbo:service interface="com.dobby.service.HelloService" ref="helloService"/>


</beans>